<view xmlns:android="http://schemas.android.com/apk/res/android"
    class="info.guardianproject.otr.app.im.app.MessageView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"	
    android:layout_margin="6dp"
    android:descendantFocusability="blocksDescendants"
    
     >
     
			
	        	
    <LinearLayout
        android:id="@+id/message_container" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"         
        android:layout_marginLeft="24dp"
        android:layout_marginRight="36dp"
        android:paddingLeft="16dp"
        android:orientation="vertical"
        android:background="@drawable/message_view_rounded_light"
        >
        
                <org.ironrabbit.type.CustomTypefaceTextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:padding="6dp"
              android:layout_gravity="left"
              android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="24dp"
                    android:color="?messageTextPrimary"
                     />
         
        
     <ImageView
            android:id="@+id/media_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"     
             android:scaleType="centerCrop"
         android:visibility="gone"  
         android:focusableInTouchMode="true"
             />
                  <TextView
                android:id="@+id/messagets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"         
                android:layout_marginLeft="24dp"
                 android:layout_marginBottom="1dp"
                 android:padding="6dp"
            	android:textSize="10sp"                 
            	   android:color="?messageTextSecondary"
                />
                   
        
          	</LinearLayout>
     
		<ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop" 
            android:visibility="gone"            
            android:padding="0dp"
            />	
</view>
