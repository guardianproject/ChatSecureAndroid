<view xmlns:android="http://schemas.android.com/apk/res/android"
    class="info.guardianproject.otr.app.im.app.MessageView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"	
    android:orientation="horizontal"
    
     >
     
	    <LinearLayout 
	      android:layout_width="6dp"
		android:layout_height="match_parent" 
		android:orientation="horizontal"
		android:padding="0dp"
		android:id="@+id/status_block"
		/>
		<LinearLayout 
	        android:layout_width="wrap_content"        
		android:layout_height="match_parent" 
		android:orientation="vertical"
		android:padding="0dp"
		android:layout_gravity="top"
		android:background="#cccccc"		
		>
		<ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop" 
            android:visibility="gone"
            android:layout_marginRight="0dip"
            />
		</LinearLayout>
	        	
    <RelativeLayout
        android:id="@+id/message_container" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="0dp"         
        android:layout_marginRight="36dp"
        android:paddingLeft="6dp"
         android:background="#ddffffff"
        >
                
<!-- 
                  <ImageView
            android:id="@+id/message_delivered"
            android:layout_width="16dp"
            android:layout_height="16dp"            
            android:scaleType="fitCenter"
            android:visibility="gone"            
            android:layout_toRightOf="@+id/messagets"            
             />
              -->
             
                  <TextView
                android:id="@+id/messagets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
            android:layout_below="@+id/messagebox"            
                android:textSize="12sp"
                    android:layout_marginBottom="1dp"
                    
                />
                  
        <ImageView
            android:id="@+id/media_thumbnail"
            android:layout_width="196dp"
            android:layout_height="128dp"
            android:layout_margin="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_file"
            android:visibility="gone"            
            android:layout_below="@+id/messagets"
            
             />
        
        
<LinearLayout
             android:id="@+id/messagebox"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="3dp"
              android:layout_gravity="left"
              android:gravity="left"
              
            >
                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:autoLink="web|email|phone|map"
                     />
                </LinearLayout>
             
          	</RelativeLayout>
          	
</view>
