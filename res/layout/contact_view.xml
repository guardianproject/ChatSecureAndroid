<view xmlns:android="http://schemas.android.com/apk/res/android"
    class="info.guardianproject.otr.app.im.app.ContactView"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
  >
   
	    <LinearLayout android:layout_width="9dp"
		android:layout_height="match_parent" android:orientation="horizontal"
		android:padding="0dp"
		android:id="@+id/status_block"
		>
		</LinearLayout>
	    	
    <RelativeLayout
        android:id="@+id/contactInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" 
        android:padding="3dp"
        >

                <TextView
                    android:id="@+id/contactStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                     />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:paddingRight="8dip"
                    android:text=""
                    	android:layout_alignParentRight="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                     android:layout_toRightOf="@+id/contactStatus"
                     />
                
                  <TextView
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/contactStatus"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                
             
          	</RelativeLayout>
    
</view>